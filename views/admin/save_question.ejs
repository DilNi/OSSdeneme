<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kaydedilen Sorular</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="header">
        <h2 class="logo">Logo</h2>
        <nav class="navigation">
            <a href="#">Ana Sayfa</a>
            <a href="/quiz">Kısa Sınav</a>
            <a href="/contact.ejs">İletişim</a>
            <a href="/logout" class="btnLogout">Çıkış Yap</a>
        </nav>
    </div>

    <div class="wrapper_2">
        <h2>Kaydedilen Sorular</h2>
        <section class="section">
            <div class="row">
              <div class="col-lg-12">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Görevler</h5>
                    <table class="table datatable">
                      <thead>
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Ders</th>
                          <th scope="col">Zorluk</th>
                          <th scope="col">Soru</th>
                          <th scope="col">Seçenekler</th>
                          <th scope="col">Doğru Seçenek</th>
                          <th scope="col">İşlemler</th>
                          <th scope="col"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% ion.forEach((question, index) => { %>
                          <tr>
                            <th scope="row">
                              <%= index + 1 %>
                            </th>
                            <td>
                              <%= question.subject %>
                            </td>
                            <td>
                              <%= question.difficulty %>
                            </td>
                            <td>
                              <%= question.question %>
                            </td>
                            <td>
                              <% question.options.forEach((option) => { %>
                                <%= option %><br>
                              <% }); %>
                            </td>
                            <td>
                              <%= question.correctOption %>
                            </td>
                            <td>
                              <form action="/admin/delete-question/<%= question._id %>" method="POST"
                                style="display: inline;">
                                <button type="submit" class="btn btn-danger rounded-pill">Sil</button>
                              </form>
                              <a href="/admin/edit-question/<%= question._id %>"
                                class="btn btn-success rounded-pill">Düzenle</a>
                            </td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
        </section>
    </div>
</body>

</html>
