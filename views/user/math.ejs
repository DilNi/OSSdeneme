<%- include('../includes/head.ejs') %>
<%- include('../includes/nav.ejs') %>

<div class="wrapper_2">
  <div class="difficulty-selection" id="difficultyContainer">
    <label for="difficulty">Zorluk Seviyesi Seçin:</label>
    <select id="difficulty">
      <option value="Kolay">Kolay</option>
      <option value="Orta">Orta</option>
      <option value="Zor">Zor</option>
    </select>
    <button id="loadQuestionsBtn" class="btn btn-primary">Soruları Yükle</button>
  </div>
  <div id="questionsContainer">
    <!-- Sorular burada listelenecek -->
  </div>
  <div class="navigation-buttons"  style="display: none;">
    <button id="prevQuestionBtn" class="btn btn-secondary">Geri</button>
    <button id="nextQuestionBtn" class="btn btn-primary">İleri</button>
    <!-- Bitir butonu için eklenen kısım -->
<button id="finishBtn" class="btn btn-primary" style="display: none;">Bitir</button>

    
    
  </div>
  
</div>

<div id="questionTemplate" style="display: none;">
  <div class="container mt-sm-5 my-1">
    <div class="question ml-sm-5 pl-sm-5 pt-2">
      <!-- questionTemplate içerisine resim için bir img elementi ekleyin -->
      <img src="" alt="Soru Resmi" style="max-width: 60%; height: auto;" id="questionImage">

      <div class="py-2 h5"><b>currentIndex <span class="questionDescription"></span></b></div>
      <div class="ml-md-3 ml-sm-3 pl-md-5 pt-sm-0 pt-3" id="options">
        <label class="options"><span class="optionText"></span>
          <input type="radio" name="radio">
          <span class="checkmark"></span>
        </label>
      </div>
   
    </div>

  </div>
  
</div>

<div class="result-popup" style="display: none;">
  <h2>Quiz Sonucu</h2>
  <p>Doğru Cevap Sayısı: <span id="correctCount"></span></p>
  <p>Yanlış Cevap Sayısı: <span id="incorrectCount"></span></p>
  <p>Toplam Puan: <span id="totalScore"></span></p>
  <h3>Doğru Cevaplar:</h3>
  <ul id="correctAnswersList">
    <!-- Doğru cevaplar burada listelenecek -->
  </ul>
  <button id="closePopupBtn" class="btn btn-primary">Kapat</button>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.21/lodash.min.js"></script>
<script src="/js/script.js">
    
</script>
<script>
  loadQuestionsForSubject('matematik');
</script>


</body>
</html>